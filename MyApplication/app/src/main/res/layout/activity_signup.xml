<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/imageButton_back2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:onClick="back"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="8"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#313234"
            android:textSize="9pt" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:gravity="left"
                    android:text="아이디"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/putID"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="비밀번호"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/putPW"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="비밀번호 확인"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/putPW2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="전화번호"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/putPN"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="이메일"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/putEmail"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="주소"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/putAd"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/putAd2"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/Button_member"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bin_blue"
            android:onClick="i_member"
            android:text="회원가입"
            android:textColor="#F5F5F5" />


    </LinearLayout>
</LinearLayout>